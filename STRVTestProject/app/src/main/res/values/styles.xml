<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TodayFragmentText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="TodayFragmentText.Temperature">
        <item name="android:textSize">@dimen/fragment_today_temperature_text_size</item>
    </style>

    <style name="TodayFragmentText.City">
        <item name="android:textSize">@dimen/fragment_today_city_text_size</item>
    </style>

    <style name="TodayFragmentText.PrecipitationText">
        <item name="android:textSize">@dimen/fragment_today_precipitation_text_text_size</item>
    </style>

    <style name="ForecastFragmentWeatherText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/fragment_forecast_row_item_weather_text_text_size</item>
    </style>

    <style name="ForecastFragmentTemperature">
        <item name="android:textSize">@dimen/fragment_forecast_row_item_temperature_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

</resources>
