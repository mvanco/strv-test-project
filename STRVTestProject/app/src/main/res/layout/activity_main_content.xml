<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matusvanco.weather.android.activity.MainActivity">

    <FrameLayout
        android:id="@+id/activity_main_content_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/activity_main_content_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_main_content_progress_bar_top_margin"
        android:indeterminate="true"
        android:visibility="invisible"
        android:textAppearance="@style/Widget.AppCompat.ProgressBar.Horizontal" />

</FrameLayout>
